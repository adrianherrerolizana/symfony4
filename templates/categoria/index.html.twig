{% extends 'base.html.twig' %}

{% block title %}Categoria index{% endblock %}

{% block body %}
    <h1>Categoria index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorium in categorias %}
            <tr>
                <td>{{ categorium.id }}</td>
                <td>{{ categorium.nombre }}</td>
                <td>{{ categorium.descripcion }}</td>
                <td>
                    <a href="{{ path('categoria_show', {'id': categorium.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('categoria_edit', {'id': categorium.id}) }}" class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categoria_new') }}" class="btn btn-primary">Create new</a>
    <a href="{{ path('incidencia_index') }}" class="btn btn-primary">Ir a incidencias</a>
{% endblock %}
